ifdef JCOV_HOME
    JCOV_JARS=\
	-Djcov.jar=$(JCOV_HOME)/lib/jcov.jar \
	-Djcov_network_saver.jar=$(JCOV_HOME)/lib/jcov_network_saver.jar
else 
    STATIC_JCOV_KEYS=\
	$(GREP) help.jcov $(JAVADIR)/com/sun/javatest/regtest/i18n.properties | $(SED) -e 's/\(.*\)=.*/i18n: \1/' >> $(@:%.ok=%.log)
endif

$(BUILDDIR)/i18n.com.sun.javatest.regtest.ok: \
		$(JAVAFILES.com.sun.javatest.regtest:%=$(JAVADIR)/com/sun/javatest/regtest/%) \
		$(JAVADIR)/com/sun/javatest/regtest/i18n.properties \
		$(BUILDDIR)/classes.com.sun.javatest.regtest.ok \
		checkI18NProps.sh
	CLASSPATH="$(CLASSDIR)$(PS)$(JAVADIR)$(PS)$(JAVATEST_JAR)$(PS)$(JAVAHELP_JAR)" \
	    $(J2SEJAVA) -Djavatest.i18n.log=com.sun.javatest.regtest \
		$(JCOV_JARS) \
		com.sun.javatest.regtest.Main -help all \
		> $(@:%.ok=%.log) 2>&1
	$(STATIC_JCOV_KEYS)
	$(SH) checkI18NProps.sh $(JAVADIR)/com/sun/javatest/regtest $(@:%.ok=%.log)
	echo $@ passed at `date` > $@

TESTS.jtreg += $(BUILDDIR)/i18n.com.sun.javatest.regtest.ok
