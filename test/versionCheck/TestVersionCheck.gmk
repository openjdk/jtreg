$(BUILDTESTDIR)/TestVersionCheck.match.ok: \
                $(JTREG_IMAGEDIR)/lib/jtreg.jar \
		$(JTREG_IMAGEDIR)/lib/javatest.jar
	$(RM) $(@:%.ok=%/work) $(@:%.ok=%/report)
	$(MKDIR) -p $(@:%.ok=%)
	$(JDKHOME)/bin/java \
		-jar $(JTREG_IMAGEJARDIR)/jtreg.jar \
		-w:$(@:%.ok=%/work) \
		-r:$(@:%.ok=%/report) \
		-compileJDK:$(JDK8HOME) \
		-testJDK:$(JDK8HOME) \
		$(TESTDIR)/versionCheck \
		> $(@:%.ok=%/log 2>&1) \
	    || (cat $(@:%.ok=%/log) ; exit 1)
	if grep 'different version' $(@:%.ok=%/log) ; then \
	    echo "unexpected message in log" ; exit 1; \
	fi
	echo $@ passed at `date` > $@

ifdef JDK8HOME
TESTS.jtreg += \
	$(BUILDTESTDIR)/TestVersionCheck.match.ok
endif

#----------------------------------------------------------------------

$(BUILDTESTDIR)/TestVersionCheck.mismatch.ok: \
                $(JTREG_IMAGEDIR)/lib/jtreg.jar \
		$(JTREG_IMAGEDIR)/lib/javatest.jar
	$(RM) $(@:%.ok=%/work) $(@:%.ok=%/report)
	$(MKDIR) -p $(@:%.ok=%)
	$(JDKHOME)/bin/java \
		-jar $(JTREG_IMAGEJARDIR)/jtreg.jar \
		-w:$(@:%.ok=%/work) \
		-r:$(@:%.ok=%/report) \
		-compileJDK:$(JDK7HOME) \
		-testJDK:$(JDK8HOME) \
		$(TESTDIR)/versionCheck \
		> $(@:%.ok=%/log 2>&1) \
	    || (cat $(@:%.ok=%/log) ; exit 1)
	if grep 'different version' $(@:%.ok=%/log) ; then \
	    echo "warning found, as expected" ; \
	else \
	    echo "expected warning not found" ; exit 1 ; \
	fi
	echo $@ passed at `date` > $@

ifdef JDK7HOME
ifdef JDK8HOME
TESTS.jtreg += \
	$(BUILDTESTDIR)/TestVersionCheck.mismatch.ok
endif
endif

