$(BUILDDIR)/TestNGJUnitTest.agentvm.ok \
$(BUILDDIR)/TestNGJUnitTest.othervm.ok: \
		$(JTREG_IMAGEDIR)/lib/jtreg.jar \
		$(JTREG_IMAGEDIR)/lib/junit.jar \
		$(JTREG_IMAGEDIR)/lib/testng.jar \
		$(JTREG_IMAGEDIR)/bin/jtreg
	$(MKDIR) -p $(@:%.ok=%)
	$(JTREG_IMAGEDIR)/bin/jtreg \
		-jdk:$(JDK8HOME) \
		-w:$(@:%.ok=%/work) \
		-r:$(@:%.ok=%/report) \
		$(@:$(BUILDDIR)/TestNGJUnitTest.%.ok=-%) \
		$(TESTDIR)/testng-junit \
		> $(@:%.ok=%/jt.log) 2>&1
	$(GREP) -s 'Test results: passed: 2' $(@:%.ok=%/jt.log)  > /dev/null
	$(GREP) -s 'Total tests run: 3, Passes: 3, Failures: 0, Skips: 0' $(@:%.ok=%/work)/testng/p/T1.jtr  > /dev/null
	$(GREP) -s 'Total tests run: 3, Passes: 3, Failures: 0, Skips: 0' $(@:%.ok=%/work)/testng/p/T2.jtr  > /dev/null
	echo $@ passed at `date` > $@

ifdef JDK8HOME
TESTS.jtreg += \
	$(BUILDDIR)/TestNGJUnitTest.agentvm.ok \
	$(BUILDDIR)/TestNGJUnitTest.othervm.ok
endif

