# verify that when a jasm file is compiled as a jtreg action, then
# the jtr report of the test contains the "jasm-stdout", "jasm-stderr"
# and "jasm" sections for that test action
$(BUILDTESTDIR)/junitDiscoveryFailure.ok: \
                $(JTREG_IMAGEDIR)/lib/javatest.jar \
		$(JTREG_IMAGEDIR)/lib/jtreg.jar \
		$(JTREG_IMAGEDIR)/bin/jtreg

	$(RM) $(@:%.ok=%)
	$(MKDIR) $(@:%.ok=%)

	$(JTREG_IMAGEDIR)/bin/jtreg $(JTREG_OPTS) \
		-jdk:$(JDKHOME) \
		-w $(@:%.ok=%)/work/ \
		-r $(@:%.ok=%)/report/ \
		$(TESTDIR)/junitDiscoveryFailure/ > $(@:%.ok=%/jt.log) ; jtreg_exit_code=$$?; \
	    echo "jtreg exited with exit code $$jtreg_exit_code"; \
        if [ "$$jtreg_exit_code" -eq 0 ]; then \
            echo "jtreg process was expected to fail, but didn't - exit code=$$jtreg_exit_code" ; \
            exit 1 ; \
        fi

    # verify that the discovery failure was noticed
	$(GREP) 'encountered a critical issue during test discovery' \
            $(@:%.ok=%)/work/InvalidJUnitTest.jtr > /dev/null

	# verify that the test method wasn't executed
	$(GREP) 'static method testFooBar unexpectedly executed' \
	    $(@:%.ok=%)/work/InvalidJUnitTest.jtr > /dev/null ; rc=$$?; \
	    if [ "$$rc" -ne 1 ]; then \
	        echo "JUnit test method was unexpectedly executed" ; \
	        exit 1 ; \
	    fi

	echo "$@ test passed at `date`" > $@


TESTS.jtreg += $(BUILDTESTDIR)/junitDiscoveryFailure.ok
